@using Mvc_EntityFrameWork.Models
@model HomePageViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <title>Index</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2>Entity FrameWork List</h2>
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div >
                    @Html.ActionLink("New Person","NewPerson","Person",null,new { @class="btn btn-primary"})
                    <br /><br />
                </div>
                <ul class="list-group">
                    <li class="list-group-item active" >Person List</li>
                    @foreach (var item in Model.PersonList)
                    {
                       <li class="list-group-item">@(item.Name + "-" + item.Surname + "-" + item.Age.ToString())</li>
                    }
                </ul>
            </div>
            <div class="Col-md-6">
                <div>
                    @Html.ActionLink("New Adress", "NewAdress", "Adress", null, new { @class = "btn btn-primary" })
                    <br /><br />
                </div>
                <ul class="list-group">
                    <li class="list-group-item active">Adress List</li>
                    @foreach (var item in Model.AdressList)
                    {
                        <li class="list-group-item">@(item.Province + "-" + item.City + "-" + item.District)</li>

                    }
                </ul>
            </div>
        </div>
     
       
    </div>
</body>
</html>
